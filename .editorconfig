root = true

[*]
charset                  = utf-8
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = tab

[{ *.yml, package.json, package.json.lock, bower.json }]
indent_style             = space
indent_size              = 2
continuation_indent_size = 4

[*.md]
trim_trailing_whitespace = false
