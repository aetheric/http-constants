root = true

[*]
charset                   = utf-8
end_of_line               = lf
strip_trailing_whitespace = true
insert_final_newline      = true
indent_style              = tab
indent_size               = 4
continuation_indent_size  = 8

[{ *.yml, package.json, bower.json }]
indent_style             = space
indent_size              = 2
continuation_indent_size = 4
